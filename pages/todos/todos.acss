.page-todos {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user {
  /* display: flex; */
  height: 300rpx;
  background: url(../../images/top-title.png) no-repeat;
  background-size: 750rpx; 
  position: relative;
  margin-bottom: 230rpx;
}
.user-name{
  width: 100%
}
.avatar {
  width: 96rpx;
  height: 96rpx;
  margin: 68rpx 30rpx auto;
  border-radius: 50%;
}

.nickname { 
  position: absolute;
  left: 160rpx;
  top:70rpx; 
  color:#fff;
  font-size: 40rpx;
}
.nicktext {
  display:block;
  width: 300rpx;  
  color:#fff;
  font-size: 28rpx;
  position: absolute;
  left: 160rpx;
  top:130rpx;
}
.to-right{
  position: absolute;
  right:30rpx;
  top:106rpx;
  width: 18rpx;
  height: 30rpx;
}
